#!/bin/bash

set -eux

PLATFORM=$(uname | tr '[:upper:]' '[:lower:]')

# shellcheck disable=1090
source "${BOSH_PACKAGES_DIR:-/var/vcap/packages}/ruby-2.5.8-r0.48.0/bosh/compile.env"

if [[ "${PLATFORM}" == "darwin" ]]; then
  "${BOSH_PACKAGES_DIR:-/var/vcap/packages}/ruby-2.5.8-r0.48.0/bin/gem" install nokogiri
  exit 0
fi

cp -r ./test-app/. "${BOSH_INSTALL_TARGET}/"

bosh_bundle_local --gemfile="${BOSH_INSTALL_TARGET}/Gemfile"
bosh_generate_runtime_env
